{$R *.dfm}

procedure TForm5.Button1Click(Sender: TObject);
begin
DataModule1.KonutQuery1.SQL.Text:= 'UPDATE ev SET emlakNumarasi= :emlk, katNumarasi = :kts,evDurumu = evd where id=:i';
      DataModule1.KonutQuery1.ParamByName('i').AsString := Edit1.Text;
      DataModule1.KonutQuery1.ParamByName('nam').AsString := Edit2.Text;
      DataModule1.KonutQuery1.ParamByName('st').AsString := Edit3.Text;
      DataModule1.KonutQuery1.Execute;
end;

