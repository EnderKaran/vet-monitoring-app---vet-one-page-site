{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
Application.Terminate;
end;

procedure TForm1.Button3Click(Sender: TObject);
begin
      cxTextEdit5.Clear;
      cxTextEdit1.Clear;
      cxTextEdit2.Clear;
      cxTextEdit3.Clear;
      cxTextEdit4.Clear;
      cxTextEdit6.Clear;
      cxTextEdit7.Clear;
      cxTextEdit8.Clear;
      cxTextEdit9.Clear;
end;

procedure TForm1.cxButton1Click(Sender: TObject);
begin
with MyConnection1 do
  begin
    try
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.Text :=
      'INSERT INTO tablo(id,ad,soyad,aciklama) VALUES(:id,:ad,:soyad,:aciklama)';
      MyQuery1.ParamByName('id').Value := cxTextEdit5.Text;
      MyQuery1.ParamByName('ad').Value := cxTextEdit1.Text;
      MyQuery1.ParamByName('soyad').Value := cxTextEdit2.Text;  //soyadın hangi edit tarafından değiştireliceğini belirtiyor
      MyQuery1.ParamByName('aciklama').Value := cxTextEdit3.Text;
      ShowMessage('Veriler Eklendi');
      MyQuery1.Execute;

    finally
      MyQuery1.sql.add('SELECT * FROM tablo');
    end;
  end;
end;

procedure TForm1.cxButton2Click(Sender: TObject); //listeleme komutu
begin
  with MyConnection1 do
  begin
    with MyQuery1 do
    begin
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.add('SELECT * FROM tablo');
      MyQuery1.open;
      if RecordCount > 0 then
      begin
        ShowMessage('Veriler Listelendi');
      end;
    end;
  end;
end;

procedure TForm1.cxButton3Click(Sender: TObject);
begin
with MyQuery1 do
  begin

    try
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.Text := 'DELETE FROM tablo WHERE id=:Edit7_deger';
      MyQuery1.ParamByName('Edit7_deger').Value := StrToInt(cxTextEdit4.Text);
      MyQuery1.Execute;
    finally
      MyQuery1.sql.add('SELECT * FROM tablo');
    end;

  end;
end;

procedure TForm1.cxButton4Click(Sender: TObject);
begin
      MyQuery1.SQL.Text:= 'UPDATE ev SET emlakNumarasi= :emlk, katNumarasi = :kts,evDurumu = :evd where id=:i';
      MyQuery1.ParamByName('i').AsString := Edit4.Text;
      MyQuery1.ParamByName('emlk').AsString := Edit1.Text;
      MyQuery1.ParamByName('kts').AsString := Edit2.Text;
      MyQuery1.ParamByName('evd').AsString := Edit3.Text;
      MyQuery1.Execute;
end;

procedure TForm1.cxButton5Click(Sender: TObject);
begin
MyConnection1.Open();
MyQuery1.Open();
end;

procedure TForm1.cxButton6Click(Sender: TObject);    //arama komutu
begin
with MyConnection1 do
  begin
    with MyQuery1 do
    begin
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.add('SELECT * FROM tablo');
      MyQuery1.sql.add('WHERE id LIKE ''' + cxTextEdit10.Text + '''');
      MyQuery1.open;
      if RecordCount > 0 then
      begin
        ShowMessage('Kayit Bulundu');
      end;

    end;
  end;
end;

end.
