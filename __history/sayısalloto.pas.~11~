unit sayýsalloto;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Button1: TButton;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Edit4: TEdit;
    Edit5: TEdit;
    Edit6: TEdit;
    Button2: TButton;
    Label2: TLabel;
    Label3: TLabel;
    ListBox1: TListBox;
    ListBox2: TListBox;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
rsayilar:string;
begin
Length(rsayilar);
rsayilar[0]:=StrToInt(Edit1.Text);
rsayilar[1]:=StrToInt(Edit2.Text);
rsayilar[2]:=StrToInt(Edit3.Text);
rsayilar[3]:=StrToInt(Edit4.Text);
rsayilar[4]:=StrToInt(Edit5.Text);
rsayilar[5]:=StrToInt(Edit6.Text);

Edit1.Clear;
Edit2.Clear;
Edit3.Clear;
Edit4.Clear;
Edit5.Clear;
Edit6.Clear;
ListBox1.Clear;
ListBox2.Clear;
ShowMessage('Loto Sayýlarý Oluþturuldu.');
end;

procedure TForm1.Button2Click(Sender: TObject);
var
I,e,a,sayi,sayilar:Integer;
rsayilar:string;
begin
a:=0;
for I := 0 to 15 do begin
sayi:=Random(49);
if a<6 then begin
if (sayi<>0)and (sayi <> rsayilar[0]) and (sayi <> rsayilar[1]) and(sayi <> rsayilar[2] )and (sayi <> rsayilar[3]) and (sayi <> rsayilar[4]) and (sayi <>rsayilar[5]) then
begin
rsayilar[a]:=sayi;
a:=a+1;
end;
end;
end;
for I :=0 to 5 do begin
ListBox1.Items.Add(IntToStr(rsayilar[I]));
end;
for e := 0 to 5 do
begin
if sayilar[e]=rsayilar[e] then
begin
ListBox2.Items.Add('BÝNGO'+IntToStr(sayilar[e]));
end
else begin
ListBox2.Items.Add(' Tutturamadýnýz.');
end;
end;
end;
end.
