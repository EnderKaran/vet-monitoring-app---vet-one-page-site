{$R *.dfm}
procedure TForm4.Button1Click(Sender: TObject);
begin
firmaQuery1.SQL.Text:= 'UPDATE firma SET ad= :ad, sehir = :sehir,faks_no = :faks_no,vergi_no = :vergi_no,sirket_durumu = :sirket_durumu where firma_no=:i';
     firmaQuery1.ParamByName('i').AsString := Edit1.Text;
      firmaQuery1.ParamByName('ad').AsString := Edit4.Text;
      firmaQuery1.ParamByName('sehir').AsString := Edit2.Text;
     firmaQuery1.ParamByName('faks_no').AsString := Edit5.Text;
      firmaQuery1.ParamByName('vergi_no').AsString := Edit3.Text;
     firmaQuery1.ParamByName('sirket_durumu').AsString := ComboBox1.Text;
ShowMessage('Veriler Baþarýyla Güncellendi');
      firmaQuery1.Execute;
end;
procedure TForm4.Button2Click(Sender: TObject);
begin
Application.Terminate;
end;

procedure TForm4.Button3Click(Sender: TObject);
begin
firma1.Open();
firmaQuery1.Open();
end;

end.
