{$R *.dfm}

procedure TForm5.Button1Click(Sender: TObject);
begin
with MyQuery1 do
  begin

    try
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.Text := 'DELETE FROM kullanici WHERE id=:Edit7_deger';
      MyQuery1.ParamByName('Edit7_deger').Value := StrToInt(cxTextEdit4.Text);
      MyQuery1.Execute;
    finally
      MyQuery1.sql.add('SELECT * FROM tablo');
    end;

  end;
end;

procedure TForm5.Button2Click(Sender: TObject);
var
MyText : TStringList;
begin
   MyText := TStringList.Create;
   try
     MyText.Add('line 1');
    MyText.Add('line 2');
    MyText.SaveToFile('c:\folder\filename.txt');
   finally
     MyText.Free;
   end;
end;

procedure TForm5.Button3Click(Sender: TObject);
begin
Application.Terminate;
end;

procedure TForm5.Button4Click(Sender: TObject);
begin
try
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.Text :=
      'INSERT INTO kullanici(P_kullanici_adi,P_kullanici_parola) VALUES(:P_kullanici_adi,:P_kullanici_parola)';
      MyQuery1.ParamByName('P_kullanici_adi').Value := Edit1.Text;
      MyQuery1.ParamByName('P_kullanici_parola').Value := Edit2.Text;
      ShowMessage('Veriler Eklendi');
      MyQuery1.Execute;

    finally
      MyQuery1.sql.add('SELECT * FROM kullanici');
    end;
  end;
procedure TForm5.Button5Click(Sender: TObject);
begin
with MyConnection1 do
  begin
    with MyQuery1 do
    begin
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.add('SELECT * FROM kullanici');
      MyQuery1.open;
      if RecordCount > 0 then
      begin
        ShowMessage('Veriler Listelendi');
      end;
    end;
  end;
end;


end.
