{$R *.dfm}

procedure TForm1.Button4Click(Sender: TObject);
begin
with MyQuery1 do
    begin
      MyQuery1.close;
      MyQuery1.sql.clear;
      MyQuery1.sql.add('SELECT * FROM ad');
      MyQuery1.sql.add('WHERE id LIKE ''' + Edit1.Text + '''');
      MyQuery1.open;
      if RecordCount > 0 then
      begin
        ShowMessage('Kayit Bulundu');
      end;

    end;
end;

end.
